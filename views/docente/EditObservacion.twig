{% extends "base.twig" %}

{% block content %}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ url_base }}index.php">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ url_base }}index.php?controller=InfoProyect&id={{ idProyecto }}">{{ resolucion }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">Editar Observacion</li>
    </ol>
</nav>

<h1>Editar Observacion</h1>

<div class="card">
  <div class="card-header">
    Observacion
  </div>
  <div class="card-body">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Respuesta</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{ respuesta }}.</td>
          </tr>
        </tbody>
      </table>
      <form method="post" action="{{ url_base }}index.php?controller=FormEditObservacion&id={{ idObservacion }}">

          <div class="form-group">
            <label for="exampleFormControlSelect1">Estado</label>
            <select name="selectEstado" class="form-control" id="selectEstado">
              <option value="">-- Selecciona --</option>
              <option value="0">No levantado</option>
              <option value="1">Levantado</option>
            </select>
          </div>

          <button type="submit" name="submit" class="btn btn-primary">Levantar</button>
          <a href="{{ url_base }}index.php?controller=InfoProyect&id={{ idProyecto }}" class="btn btn-secondary">Cancelar</a>
      </form>
  </div>
</div>


{% endblock %}

