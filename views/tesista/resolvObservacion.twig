{% extends "base.twig" %}

{% block content %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ url_base }}index.php">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ url_base }}index.php?controller=RisingObservations">Levantamiento de Observaciones</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ url }}</li>
        </ol>
    </nav>

    <div class="card">
      <div class="card-header">
        Ingresa tus datos
      </div>
      <div class="card-body">

          <form action="{{ url_base }}index.php?controller=ObservacionForm&id={{ url }}"  method="post" enctype="multipart/form-data">

              <div class="form-group">
                <label for="obsLev">Levantamiento</label>
                <textarea class="form-control" id="obsText" name="obsText" rows="3"></textarea>
              </div>

              <input type="file" name="obsFile" id="obsFile" class="mb-3">

              <div>
                  <button type="submit" name="submit" class="btn btn-primary">Levantar</button>
                  <a href="{{ url_base }}index.php?controller=RisingObservations" class="btn btn-secondary">Cancelar</a>
              </div>


          </form>

      </div>
    </div>

{% endblock %}

{% block scripsts %}
    <script src="{{ url_base }}public/node_modules/blueimp-file-upload/js/vendor/jquery.ui.widget.js" ></script>
    <script src="{{ url_base }}public/node_modules/blueimp-file-upload/js/jquery.fileupload.js" ></script>
    <script src="{{ url_base }}public/js/tesista/ObservacionForm.js" ></script>
{% endblock %}
